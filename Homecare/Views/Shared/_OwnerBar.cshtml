@* Polite identity strip: name + role *@

@{
    var name = (string)(ViewBag.OwnerName ?? User?.Identity?.Name ?? "User");
    var role = (string)(ViewBag.OwnerRole ?? "");
    var extra = (string)(ViewBag.OwnerExtra ?? ""); // if you want to show extra info
}
<div class="ownerbar rounded-4 px-3 py-2 d-flex align-items-center gap-2 mb-3">
    <div class="owner-avatar d-inline-flex align-items-center justify-content-center rounded-circle">
        <i class="bi bi-person-fill"></i>
    </div>
    <div class="d-flex flex-column">
        <div class="fw-semibold">@name</div>
        @if (!string.IsNullOrWhiteSpace(role) || !string.IsNullOrWhiteSpace(extra))
        {
            <div class="small text-muted">
                @role @if(!string.IsNullOrWhiteSpace(extra)){
                <text>Â· @extra</text>
            }
        </div>
                }
    </div>
</div>

@section Styles {
    <style>
        .ownerbar {
            background: rgba(248, 250, 252, .9);
            border: 1px solid #e9ecef;
            backdrop-filter: blur(6px);
        }

        .owner-avatar {
            width: 36px;
            height: 36px;
            background: #e7f1ff;
            color: #0d6efd;
            font-size: 1.1rem;
        }
    </style>
}