@{
    ViewData["Title"] = "Home";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<div class="hc-hero">
    <!-- HERO CAROUSEL -->
    <div id="homeCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="0" class="active" aria-current="true"
                aria-label="1"></button>
            <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="1" aria-label="2"></button>
            <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="2" aria-label="3"></button>
        </div>

        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active">
                <img src="~/images/hero-client.jpg" alt="Book & manage" />
                <div class="carousel-caption text-start">
                    <h1 class="hc-title text-white">Create and manage your appointment easily.</h1>
                    <p class="hc-sub text-white-50">Plan, reschedule, or cancel your homecare visit in seconds.</p>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- Signed in: role-aware redirect -->
                        <a class="btn btn-primary btn-lg me-2" asp-controller="Home" asp-action="AfterLogin">
                            My Page
                        </a>
                    }
                    else
                    {
                        <!-- Public: invite to sign in or browse public slots -->
                        <a class="btn btn-primary btn-lg me-2" asp-area="Identity" asp-page="/Account/Login">
                            Sign in
                        </a>
                    }

                    <a class="btn btn-outline-light btn-lg" asp-controller="AvailableSlot" asp-action="Table">
                        Browse Available Days
                    </a>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
                <img src="~/images/hero-nurse.jpg" alt="Personnel fast planning" />
                <div class="carousel-caption text-start">
                    <h2 class="hc-title text-white">Fast scheduling for nurses.</h2>
                    <p class="hc-sub text-white-50">Pick a day; the system opens 3 preset slots: morning, noon, evening.
                    </p>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a class="btn btn-light btn-lg text-primary fw-semibold" asp-controller="Home"
                            asp-action="AfterLogin">
                            Go to my dashboard
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-light btn-lg text-primary fw-semibold" asp-area="Identity"
                            asp-page="/Account/Login">
                            Sign in to continue
                        </a>
                    }
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item">
                <img src="~/images/hero-admin.jpg" alt="Admin control" />
                <div class="carousel-caption text-start">
                    <h2 class="hc-title text-white">End-to-end control for admins.</h2>
                    <p class="hc-sub text-white-50">Manage slots, appointments, and users from a single panel.</p>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="AfterLogin">
                            My Page
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login">
                            Sign in
                        </a>
                    }
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<!-- ROLES (public info only; actions depend on auth) -->
<section class="py-4">
    <div class="text-center mb-4">
        <h2 class="hc-title">Continue as</h2>
        <p class="hc-sub">Personalize the experience based on your role.</p>
    </div>

    <div class="row g-4">
        <!-- Client -->
        <div class="col-12 col-lg-4">
            <div class="hc-role-card h-100 d-flex flex-column">
                <div class="d-flex align-items-center mb-2">
                    <span class="hc-role-icon"><i class="bi bi-person-heart"></i></span>
                    <h5 class="mb-0">Client</h5>
                </div>
                <p class="text-muted">Create, view, and manage your bookings. Choose the services you need.</p>
                <div class="mt-auto d-grid gap-2">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a class="btn btn-primary" asp-controller="Home" asp-action="AfterLogin">Go to my page</a>
                    }
                    else
                    {
                        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
                    }
                    <a class="btn btn-outline-secondary" asp-controller="AvailableSlot" asp-action="Table">
                        See Available Days
                    </a>
                </div>
            </div>
        </div>

        <!-- Personnel -->
        <div class="col-12 col-lg-4">
            <div class="hc-role-card h-100 d-flex flex-column">
                <div class="d-flex align-items-center mb-2">
                    <span class="hc-role-icon"><i class="bi bi-person-workspace"></i></span>
                    <h5 class="mb-0">Personnel</h5>
                </div>
                <p class="text-muted">Mark your working days; the system opens 3 slots per day automatically.</p>
                <div class="mt-auto d-grid gap-2">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a class="btn btn-primary" asp-controller="Home" asp-action="AfterLogin">Go to my page</a>
                    }
                    else
                    {
                        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
                    }
                </div>
            </div>
        </div>

        <!-- Admin -->
        <div class="col-12 col-lg-4">
            <div class="hc-role-card h-100 d-flex flex-column">
                <div class="d-flex align-items-center mb-2">
                    <span class="hc-role-icon"><i class="bi bi-shield-lock"></i></span>
                    <h5 class="mb-0">Admin</h5>
                </div>
                <p class="text-muted">Full authority over slots and appointments. Monitor everything at a glance.</p>
                <div class="mt-auto d-grid gap-2">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a class="btn btn-primary" asp-controller="Home" asp-action="AfterLogin">Go to my page</a>
                    }
                    else
                    {
                        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        const hc = document.getElementById('homeCarousel');
        if (hc) new bootstrap.Carousel(hc, { interval: 5000, pause: 'hover', wrap: true });
    </script>
}